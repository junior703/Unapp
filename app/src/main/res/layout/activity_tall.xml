<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:text=""
        android:background="@drawable/tall"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:gravity="center"
        android:id="@+id/textView3"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <com.github.clans.fab.FloatingActionMenu
                android:id="@+id/social_floating_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                fab:menu_animationDelayPerItem="55"
                fab:menu_backgroundColor="@android:color/transparent"
                fab:menu_buttonSpacing="0dp"
                fab:menu_colorNormal="#da3c2f"
                fab:menu_colorPressed="#dc4b3f"
                fab:menu_colorRipple="#99d4d4d4"
                fab:menu_fab_label="Listado de los talleres"
                fab:menu_fab_size="normal"
                fab:menu_icon="@drawable/fab_add"
                fab:menu_labels_colorNormal="#ea6309"
                fab:menu_labels_colorPressed="#444"
                fab:menu_labels_colorRipple="#66efecec"
                fab:menu_labels_cornerRadius="3dp"
                fab:menu_labels_ellipsize="none"
                fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
                fab:menu_labels_margin="0dp"
                fab:menu_labels_maxLines="-1"
                fab:menu_labels_padding="8dp"
                fab:menu_labels_position="left"
                fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
                fab:menu_labels_showShadow="true"
                fab:menu_labels_singleLine="false"
                fab:menu_labels_textColor="#f2f1f1"
                fab:menu_labels_textSize="15sp"
                fab:menu_openDirection="up"
                fab:menu_shadowColor="#66aff198"
                fab:menu_shadowRadius="4dp"
                fab:menu_shadowXOffset="1dp"
                fab:menu_shadowYOffset="4dp"
                fab:menu_showShadow="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="29dp">


                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/floating_youtube"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/taller"
                    fab:fab_size="mini"
                    fab:fab_label="Danza"
                    />
                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/floatingoutube"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/radio"
                    fab:fab_size="mini"
                    fab:fab_label="Radio"
                    />

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/floating_facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/foot"
                    fab:fab_size="mini"
                    fab:fab_label="FÃºtbol"

                    />

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/floating_google_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ballet"
                    fab:fab_size="mini"
                    fab:fab_label="Ballet"
                    />

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/floating_instagram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/guitarra"
                    fab:fab_size="mini"
                    fab:fab_label="Rondalla"
                    />

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/floating_linkdin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/voleibol"
                    fab:fab_size="mini"
                    fab:fab_label="Voleibol"
                    />


                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/floating_twitter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/basket"
                    fab:fab_size="mini"
                    fab:fab_label="Basquetbol"

                    />



            </com.github.clans.fab.FloatingActionMenu>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
