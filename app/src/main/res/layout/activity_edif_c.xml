<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:text=""
        android:background="@drawable/edc"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:id="@+id/textView3"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


            <com.github.clans.fab.FloatingActionMenu
                android:id="@+id/social_floating_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                fab:menu_animationDelayPerItem="55"
                fab:menu_backgroundColor="@android:color/transparent"
                fab:menu_buttonSpacing="0dp"
                fab:menu_colorNormal="#f50057"
                fab:menu_colorPressed="#444"
                fab:menu_colorRipple="#99d4d4d4"
                fab:menu_fab_label="Docencia 2"
                fab:menu_fab_size="normal"
                fab:menu_icon="@mipmap/icon_menu"
                fab:menu_labels_colorNormal="#5c0b28"
                fab:menu_labels_colorPressed="#444"
                fab:menu_labels_colorRipple="#66efecec"
                fab:menu_labels_cornerRadius="3dp"
                fab:menu_labels_ellipsize="none"
                fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
                fab:menu_labels_margin="0dp"
                fab:menu_labels_maxLines="-1"
                fab:menu_labels_padding="8dp"
                fab:menu_labels_position="left"
                fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
                fab:menu_labels_showShadow="true"
                fab:menu_labels_singleLine="false"
                fab:menu_labels_textColor="#f2f1f1"
                fab:menu_labels_textSize="15sp"
                fab:menu_openDirection="up"
                fab:menu_shadowColor="#66aff198"
                fab:menu_shadowRadius="4dp"
                fab:menu_shadowXOffset="1dp"
                fab:menu_shadowYOffset="4dp"
                fab:menu_showShadow="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="139dp">



                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/aula20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_home"
                    fab:fab_size="mini"
                    fab:fab_label="Aulas de 1 a 20"
                    />

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/dirtic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_home"
                    fab:fab_size="mini"
                    fab:fab_label="Dirección de Tics"

                    />


                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/cooridio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_home"
                    fab:fab_size="mini"
                    fab:fab_label="Coord. de Idioma"
                    />

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/coortuto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_home"
                    fab:fab_size="mini"
                    fab:fab_label="Coordinación de Tutorial"
                    />

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/sala1a2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_home"
                    fab:fab_size="mini"
                    fab:fab_label="Sala de conferencia 1 y 2"
                    />

            </com.github.clans.fab.FloatingActionMenu>


</RelativeLayout>
